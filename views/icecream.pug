extends layout
 
block content
    h1= title
    p Welcome to #{title}
 
    - let item = results
 
    div(class="container-fluid")
        div(class="row m-1")
            each item, index in results
                - let destination = `dispatch(\"/icecream/update?id=${item._id}\")`
                div(class="col-sm-2")
                    ul
                        li #{item.icecream_name}
                        li #{item.icecream_color}
                        li #{item.icecream_price}
 
                button.btn(class="btn-primary ml-1", onclick= destination) Update
 
    script.
        function dispatch(path){
             window.location.href=path
        }