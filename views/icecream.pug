extends layout
 
block content
    h1= title
    p Welcome to #{title}
    - let createview = `dispatch(\"/icecream/create\")`
    button.btn(class="btn-primary ml-1", onclick= createview) create


    - let item = results
 
    div(class="container-fluid")
        div(class="row m-1")
            each item, index in results
                - let destination = `dispatch(\"/icecream/update?id=${item._id}\")`
                - let details = `dispatch(\"/icecream/detail?id=${item._id}\")`
                - let deletefield = `dispatch(\"/icecream/delete?id=${item._id}\")`
                div(class="col-sm-2")
                    ul
                        li #{item.icecream_name}
                        li #{item.icecream_color}
                        li #{item.icecream_price}
 
                button.btn(class="btn-primary ml-1", onclick= destination) Update
                button.btn(class="btn-secondary ml-1", onclick= details) detail
                button.btn(class="btn-info ml-1", onclick= deletefield) delete
 
    script.
        function dispatch(path){
             window.location.href=path
        }